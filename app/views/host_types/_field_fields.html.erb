<fieldset>
  <%= f.select :field_type, %w{text_field check_box area_field}, {}, {:class => "form-control"} %>
  <br>
  <%= f.text_field :name, placeholder: 'Field Name', class: "form-control" %>
  <%= f.check_box :required %><%= f.label :required %>
  <%= f.hidden_field :_destroy %>
  <%= link_to '[remove]', '#', class: 'remove_fields' %>
</fieldset>
